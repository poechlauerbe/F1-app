{
  "name": "my-f1-app",
  "version": "0.3.0",
  "description": "My small F1 app. Used API: [OpenF1](https://openf1.org/)",
  "main": "server.js",
  "scripts": {
    "start": "mkdir -p log && node ./server 2>&1 | tee -a ./log/stderr_$(date +'%Y-%m-%d-%H').log",
    "dev": "mkdir -p log && nodemon server.js 2>&1 | tee -a ./log/stderr_$(date +'%Y-%m-%d-%H').log",
    "test": "mocha test/unit/*.test.cjs",
    "test:playwright": "playwright test"
  },
  "keywords": [
    "F1",
    "formula1",
    "App",
    "express",
    "node.js",
    "ejs"
  ],
  "author": "poechlauerbe",
  "license": "MIT",
  "dependencies": {
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "ical": "^0.8.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "chai": "^5.1.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "jsonc-eslint-parser": "^2.4.0",
    "mocha": "^11.0.1",
    "nodemon": "^3.1.7",
    "playwright": "^1.48.0",
    "playwright-core": "^1.48.0",
    "prettier": "^3.4.2",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.0.0"
  }
}
